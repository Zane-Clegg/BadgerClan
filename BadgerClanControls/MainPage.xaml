<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadgerClanControls.MainPage">

    <ScrollView>
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                x:Name="SacrificeButton"
                Text="Sac a knight" 
                Command="{Binding SetStrategyCommand}"
                CommandParameter="Sacrifice" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                x:Name="RunAwayButton"
                Text="Run Away" 
                Command="{Binding SetStrategyCommand}"
                CommandParameter="RunAway" />
            <Button
                Grid.Row="1"
                Grid.Column="0"
                x:Name="RunGunButton"
                Text="Run And Gun" 
                Command="{Binding SetStrategyCommand}"
                CommandParameter="RunAndGun" />
            <Label Text="{Binding current}"
                />
        </Grid>
    </ScrollView>

</ContentPage>
