<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadgerClanControls.MainPage">

    <ScrollView>
        <Grid ColumnDefinitions="*,*"
              RowDefinitions="*,*">
            <Button
                Grid.Row="1"
                Grid.Column="1"
                x:Name="SacrificeButton"
                Text="Sac a knight" 
                Command="{Binding SetPathCommand}"
                CommandParameter="Sacrifice" 
                >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="DarkCyan"/>
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                x:Name="RunAwayButton"
                Text="Run Away" 
                Command="{Binding SetPathCommand}"
                CommandParameter="RunAway"
                >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="DarkCyan"/>
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
            <Button
                Grid.Row="1"
                Grid.Column="0"
                x:Name="RunGunButton"
                Text="Run And Gun" 
                Command="{Binding SetPathCommand}"
                CommandParameter="RunAndGun"    
                >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="BackgroundColor" Value="DarkCyan"/>
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding current,FallbackValue=Nothing}"
                />
        </Grid>
    </ScrollView>

</ContentPage>
