<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadgerClanControls.MainPage">

        <VerticalStackLayout>
        <VerticalStackLayout>
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding Current, StringFormat='current pathing: {0}'}"
                />
            <Label 
                Grid.Row="0"
                Grid.Column="0"
                Text="{Binding ErrorMessage, StringFormat='Error: {0}'}"
                />
            <Entry
                Margin="0,5,0,5"
                Text="{Binding ApiUrl, Mode=TwoWay}"
                BackgroundColor="PowderBlue"
                Placeholder="Api Url"
                />
            <Entry
                    Margin="0,5,0,5"
                    Text="{Binding ApiName, Mode=TwoWay}"
                    BackgroundColor="PowderBlue"
                    Placeholder="Api Name"
                    />
            <Button Text="Submit" Command="{Binding SubmitApiCommand}">
                <Button.Triggers>
                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                    <Setter Property="TextColor" Value="White"/>
                    <Setter Property="Scale" Value="0.95"/>
                </Trigger>
                </Button.Triggers>
            </Button>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <Button
                x:Name="SacrificeButton"
                Text="Sac a knight" 
                Command="{Binding SetPathCommand}"
                CommandParameter="Sacrifice" 
                BackgroundColor="DarkCyan"
                >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
            <Button
                x:Name="RunAwayButton"
                Text="Run Away" 
                Command="{Binding SetPathCommand}"
                CommandParameter="RunAway"
                BackgroundColor="DarkCyan"
                >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
            <Button
                x:Name="RunGunButton"
                Text="Run And Gun" 
                Command="{Binding SetPathCommand}"
                CommandParameter="RunAndGun" 
                BackgroundColor="DarkCyan"
                >
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="TextColor" Value="White"/>
                        <Setter Property="Scale" Value="0.95"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
        </VerticalStackLayout>
        <VerticalStackLayout>
            <CollectionView
                ItemsSource="{Binding ApiSelections}"
                >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout 
                            VerticalOptions="Center">
                            <CheckBox
                                IsChecked="{Binding IsSelected}"/>
                            <Label 
                                Text="{Binding ApiName}"
                                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
